<view>
    <view class="top">
        <view class="center">
            <view class="center_top">
                <view class="center_img" bindtap="toBaseInfo">
                    <!-- <image src="../../static/info_img.jpg"></image> -->
                    <open-data type="userAvatarUrl" class="user_head"></open-data>
                </view>
                <view class="center_info" bindtap="toBaseInfo">
                    <open-data type="userNickName"></open-data>
                    <!-- <view class="center_phone">phone:{{phone}}</view> -->
                    <view class="center_phone">基本信息</view>
                </view>
            </view>
            <view class="center_down">
                <view class="center_rank" bindtap="handleRank">
                    <image class="rank_icon" src="../../images/person/rank.png"></image>
                    <text class="rank_text">我的排名</text>
                </view>
                <view class="center_score" bindtap="handleCredit">
                    <image class="rank_icon" src="../../images/person/points.png" ></image>
                    <text class="rank_text">我的积分</text>
                </view>
            </view>
        </view>
        <image src='http://docfile.funkingka.cn/FqzmiFqvXbHg-cfbquNRlawHUgHt' mode='scaleToFill' class='gif-wave'></image>
    </view>

    <view class="card">
        <view class="nav">
            <view bindtap="handleMyFavor" class="item" data-url="/pages/collect/collect" formType="submit" hoverClass="none">
            <view class='wallet'>
                <image src="../../images/person/favorite.png" class="icon"></image>
                <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
                <text>我的收藏</text>
            </view>
            <view class="icon">
                <image src="../../images/person/right.png" class="icon"></image>
            </view>
            </view>
            <view bindtap="handleAbout" class="item" data-url="/pages/about/about" formType="submit" hoverClass="none">
                <view class='wallet'>
                    <image src="../../images/person/team.png" class="icon"></image>
                    <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
                    <text>关于我们</text>
                </view>
                <view class="icon">
                    <image src="../../images/person/right.png" class="icon"></image>
                </view>
            </view>
            <view bindtap="handleFeedback" class="item" data-url="/pages/feedback/feedback" formType="submit" hoverClass="none">
                <view class='wallet'>
                    <image src="../../images/person/email.png" class="icon"></image>
                    <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
                    <text>意见反馈</text>
                </view>
                <view class="icon">
                    <image src="../../images/person/right.png" class="icon"></image>
                </view>
            </view>
        </view>
    </view>  
</view>