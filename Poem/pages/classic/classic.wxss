page{
  overflow: hidden;
  background: #0D1740;
}
.scroll-box{
  white-space: nowrap;
}

.card-box{
  display: inline-block;
}

.card{
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  height: 85vh;
  width: 90vw;
  margin: 2vh 5vw;
  font-size: 20px;
  background: #F8F2DC;
  border-radius: 10px;
}

.transition {
  width: 100%;
}

.poem_content {
  background-color: #e2e0d7;
  opacity: 0.8;
  height: 60%;
  width: 90%;
  margin-top: 80px;
  margin-left: 5%;
  padding-top: 25px;
  border-radius: 10px;
  text-align: center;
}

.poem_content .title {
  font-size: 22px;
  font-weight: 700;
  font-family: "KaiTi";
  line-height: 25px;
}

.poem_content .content {
  margin-top: 10px;
  font-size: 19px;
  font-family: "KaiTi";
  line-height: 28px;
}

.like {
  position: relative;
  left: 80%;
  margin-top: 10px;
}